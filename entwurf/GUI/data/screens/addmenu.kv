NotecardsScreen:
	name: 'addmenu'
	
	fullscreen: True
	
	GridLayout:	
		rows: 3
		spacing: '20dp'
				
		Label:
			size_hint_y: 0.15
			markup: True
			text: '[size=25]Frage hinzufügen[/size]'
											
				
		BoxLayout:				
			orientation: 'horizontal'
			spacing: '10dp'
			
			GridLayout:	
				rows: 2
				spacing: '2dp'				
				size_hint_x: 0.7
								
				Label:
					size_hint_y: 0.15
					size_hint_x: 0.15
					text: 'Frage: '
				
				TextInput:
					id: question
					size_hint_y: 0.15
					size_hint_x: 0.85													
					
					
				
				BoxLayout:
					orientation: 'vertical'
					size_hint_y: 0.85
					size_hint_x: 0.15
									
					
					Label:
						size_hint_y: 0.1
						text: 'Antwort:'
					
					Label:
						id: answer
						size_hint_y: 0.9
						text: ' '
						 
				TextInput:
					size_hint_y: 0.85
					size_hint_x: 0.85					
					

			#ScrollView oder LsitView oder ähnliches
		
			BoxLayout:	
				orientation: 'vertical'
				spacing: '5dp'
				size_hint_x: 0.3
					
				canvas.before:
					Color:
						rgb: .02, .21, .26
						
					Rectangle:
						size: self.size
						pos: self.pos
				
				Label:
					size_hint_y: None
					text: 'Fragen'
		
		BoxLayout:	
			size_hint_y: 0.15			
			orientation: 'horizontal'
			spacing: '10dp'
			
			Button:
				text: 'save'			
			
			Button:
				text: 'Hauptmenü'
				on_press: app.load_screen('mainmenu','right')
					
					
					
					
					
					
					
					
					
					
					
					
					
					
					
					
					
	
