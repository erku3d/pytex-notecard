NotecardsScreen:
    name: 'mainmenue'
    
    fullscreen: True

    GridLayout: 
        rows: 1
        spacing: '2dp'
		padding: '20dp'
                
        #~ Label:
            #~ size_hint_y: 0.1
            #~ markup: True
			#~ text: '[size=25]Hauptmenü[/size]'
                                            
                
        BoxLayout:
            size_hint_y: 0.9                        
            orientation: 'horizontal'
            spacing: '10dp'
                
            
            
            BoxLayout:  
                orientation: 'vertical'
                spacing: '5dp'
				padding: '20dp'
				size_hint_x:0.4
                
                Label:
                    size_hint_y: 0.35
                
                Button:
                    size_hint_y: 0.1                    
                    text: "Thema hinzufügen"
                    on_press: app.btnNewThemePressed('up')
                
                Button:
                    size_hint_y: 0.1                    
                    text: "Thema lernen"
                    #on_press: app.load_screen('addmenu','left')
                
                Button:
                    size_hint_y: 0.1                    
                    text: "Thema Löschen"
                    #on_press: app.load_screen('addmenu','left')
                
                Button:
                    size_hint_y: 0.1                    
                    text: "Thema Bearbeiten"
                    on_press: app.btnEditPressed('left')
                
                Button:
                    size_hint_y: 0.1                    
                    text: "Thema exportieren"
                    #on_press: app.load_screen('addmenu','left')
                                
                Button:
                    size_hint_y: 0.1                    
                    text: "Beenden"
                    #on_press: app.load_screen('stop','left')
                    
                Label:
                    size_hint_y: 0.35
        
            BoxLayout:  
                orientation: 'vertical'
                spacing: '10dp'
				padding: '20dp'	
				size_hint_x:0.6
                                
                canvas.before:
                    Color:
                        rgb: .02, .21, .26
                        
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
					size_hint_y: 0.1
					markup: True
					text: '[size=20]Themen[/size]' 
                
                #~ Button:					
					#~ text: 'Neues Thema'					
					#~ size_hint_y: None
					#~ height: '48dp'
					#~ #on_press: app.newCard()
                
                ScrollView:										
					do_scroll_y: True	
					size_hint_y: 2            
						
					GridLayout:
						id: tList
						cols: 1
						spacing: '1dp'					
						size_hint_y: None
						
						
                
                

